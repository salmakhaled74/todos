<head>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,700,0,200" />

    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

</head>

<body>
    <div class="side">
        <button class="logout">Logout</button>
        <button class="Events">Upcoming</button>
    </div>
    <div class="cont1 todo-list" id="Parent">
        <form action="/todo" method="POST" class="todo-form">
            <div class="form1">
                <h1 class="headd">What do you plan to do?</h1>
                <!-- <select id="category-select">
                    <option value="all">All</option>
                    <option value="completed">Completed</option>
                    <option value="not-completed">Not Completed</option>
                </select> -->
                <input name="task" placeholder="Add a new task" class="task-input">
                <div class="DivAdd">
                    <button type="submit" class="add">Add</button>
                </div>
                <div class="divClear">
                    <button class="clear">Clear All</button>
                </div>
            </div>
        </form>

        <% for (var i=0; i < todos.length; i++) { %>
            <div id="<%= todos[i]._id %>" style="display:flex; margin-left:50px;">
                <!-- <div class="dateContainer">
                    <label for="due-date">Due date:</label>
                    <input type="date" class="due-date" data-id="<%= todos[i]._id %>" name="due-date">
                </div> -->
                <div class="todo-item" style="display:inline-block; margin-left:20px; border:5px solid #ff32ad; border-radius:30px;
    text-align:center; display:flex; flex-direction:column; justify-content:center; 
    text-align:center; width:300px; padding:10px; margin-top:5px; margin-left:350px; height:50px;
    background-color: <%= todos[i].completed ? '#ff32ad' : 'white' %>; color:<%= todos[i].completed ? 'white' : 'black' %>;
    font-size:25px; font-weight:normal; display:flex; align-items:center;
    <%= todos[i].completed ? 'text-decoration: line-through;' : '' %>">
                    <%= todos[i].task %>
                </div>
                <div class="icons" style="display:flex; justify-content:center; align-items:center">
                    <a href="#" data-id="<%= todos[i]._id %>" class="status-icon">
                        <i class="fas fa-regular fa-circle-check fa-2xl" style="color:#ff32ad; padding-left:10px;"></i>
                    </a>
                    <a href="#" data-id="<%= todos[i]._id %>" class="edit-icon">
                        <i class="fa-solid fa-pen-to-square fa-2xl" style="color:#ff32ad; padding-left:10px;"></i>
                    </a>
                    <a href="#" data-id="<%= todos[i]._id %>" class="delete-icon">
                        <i class="fa-solid fa-trash fa-2xl" style="color:#ff32ad; padding-left:10px;"></i>
                    </a>
                    <!-- <a href="#" data-id="<%= todos[i]._id %>" class="date-icon">
                        <i class="far fa-calendar-alt fa-2x" style="color:#ff32ad; padding-left:10px;"></i>
                    </a> -->
                </div>
            </div>
            <% } %>


    </div>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.5/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>
    <script src="https://kit.fontawesome.com/3c14fe92a8.js" crossorigin="anonymous"></script>
    <script type="module" src="/public/apps.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

</body>